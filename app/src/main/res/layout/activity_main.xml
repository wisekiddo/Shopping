<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wisekiddo.shopping.controller.activity.MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/fragmentLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:name="com.wisekiddo.shopping.controller.fragment.LibraryFragment"/>

        <fragment
            android:id="@+id/fragmentRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:name="com.wisekiddo.shopping.controller.fragment.ShoppingCartFragment"/>

    </LinearLayout>

    <fragment
        android:id="@+id/fragmentTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:name="com.wisekiddo.shopping.controller.fragment.AddCartFragment"/>

</FrameLayout>
