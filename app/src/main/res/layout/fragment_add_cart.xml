<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:background="@color/colorGrey">


    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:text="&lt; Cancel"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="5"
                android:gravity="center"

                android:text="@string/temp_text" />

            <Button
                android:id="@+id/save"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:text="Save &gt;"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Quantity" />

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:text="1" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/minus"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"
                    android:background="@color/colorWhite"
                    android:text="-"
                    android:textSize="11sp" />


                <Button
                    android:id="@+id/plus"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="2"

                    android:background="@color/colorWhite"
                    android:text="+"
                    android:textSize="11sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="ToggleButton"
                tools:text="Discount A (0%)" />

            <ToggleButton
                android:id="@+id/toggleButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                tools:text="Discount A (0%)" />

            <ToggleButton
                android:id="@+id/toggleButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                tools:text="Discount A (0%)" />

            <ToggleButton
                android:id="@+id/toggleButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                tools:text="Discount A (0%)" />

            <ToggleButton
                android:id="@+id/toggleButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                tools:text="Discount A (0%)" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="9sp"
                android:text="Discount A(0%)" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Discount B(10%)"
                android:textSize="9sp" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="9sp"
                android:text="Discount C(35.5%)" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="9sp"
                android:text="Discount D(50%)" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="9sp"
                android:text="Discount E(100%)" />
        </LinearLayout>

        </LinearLayout>


</LinearLayout>
